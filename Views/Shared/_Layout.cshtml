@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>@ViewData["Title"] - Chat.Web</title>

	<link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500" rel="stylesheet">

	<link rel="stylesheet" href="/../assets/css/vendor/bootstrap.css">
	<link rel="stylesheet" href="/../assets/vendor/metismenu/dist/metisMenu.css">
	<link rel="stylesheet" href="/../assets/vendor/switchery-npm/index.css">
	<link rel="stylesheet" href="/../assets/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.css">
								
	<link rel="stylesheet" href="/../assets/css/icons/line-awesome.min.css">
								
	<link rel="stylesheet" href="/../assets/css/icons/dripicons.min.css">
								
	<link rel="stylesheet" href="/../assets/css/icons/material-design-iconic-font.min.css">
								
	<link rel="stylesheet" href="/../assets/css/common/main.bundle.css">
								
	<link rel="stylesheet" href="/../assets/css/layouts/horizontal/core/main.css">
								
	<link rel="stylesheet" href="/../assets/css/layouts/horizontal/menu-type/default.css">
								
	<link rel="stylesheet" href="/../assets/css/layouts/horizontal/themes/theme-a.css">
</head>

<body class="layout-horizontal">

	<div id="app">
		<div class="container-fluid">
				
			<div class="top-toolbar-wrapper">
				<nav class="top-toolbar navbar flex-nowrap">
					<ul class="navbar-nav nav-right">
					
						
						  @if (User.Identity.IsAuthenticated)
                        {
						<li class="nav-item dropdown dropdown-menu-lg">
							<a class="nav-link nav-pill user-avatar" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
								<img src="../assets/img/avatars/1.jpg" class="w-35 rounded-circle" alt="Albert Einstein">
							</a>
							<div class="dropdown-menu dropdown-menu-right dropdown-menu-accout">
								<div class="dropdown-header pb-3">
									<div class="media d-user">
										<img class="align-self-center mr-3 w-40 rounded-circle" src="../assets/img/avatars/1.jpg" alt="Albert Einstein">
										<div class="media-body">
											<h5 class="mt-0 mb-0">@User.Claims.Where(c => c.Type == ClaimTypes.GivenName).Select(c => c.Value).SingleOrDefault()</h5>
											<span></span>
										</div>
									</div>
								</div>
								<a class="dropdown-item" href="/Chat/Index"><i class="icon dripicons-mail"></i> Message </a>
								<a class="dropdown-item" href="/Chat/Notification"><i class="icon dripicons-bell"></i> Notification </a>
								<div class="dropdown-divider"></div>
								<a class="dropdown-item" asp-controller="Account" asp-action="Logout"><i class="icon dripicons-lock-open"></i> Sign Out</a>
							</div>
							</li>
						}
							
						<li class="nav-item dropdown dropdown-menu-lg">
							
						</li>
					</ul>
				</nav>
			</div>
	
		</div>
		
		<div class="header-wrapper">
			<div class="header-top">
				
				<ul class="mobile-only navbar-nav nav-left">
					<li class="nav-item">
						<a href="javascript:void(0)" data-toggle-state="aside-left-open">
							<i class="icon dripicons-align-left"></i>
						</a>
					</li>
				</ul>
				
				<div class="container-fluid">
					<div class="row">
						<div class="col-sm-12 col-lg-6">
							<ul class="site-logo">
								<li>
									
									<a href="/Chat/Index">
										
										<h1 class="brand-text">Codespeaker.com</h1>
									</a>
									
								</li>
							</ul>
						</div>
					</div>
				</div>
				
				<ul class="mobile-only navbar-nav nav-right">
					<li class="nav-item">
						<a href="javascript:void(0)" data-toggle-state="mobile-topbar-toggle">
							<i class="icon dripicons-dots-3 rotate-90"></i>
						</a>
					</li>
				</ul>
				
			</div>
			<div class="header-bottom">
				<div class="container-fluid">
				
					<nav class="main-menu">
						<ul class="nav metismenu">
							<li class="sidebar-header mobile-only"><span>NAVIGATION</span></li>
							<li>
								<a class="has-arrow" asp-controller="Chat" asp-action="Index" aria-expanded="false"><i class="icon dripicons-meter"></i><span class="hide-menu">Chat</span></a>
								
							</li>
							
							
						@if (User.Identity.IsAuthenticated)
						{
                         
						@if (User.Claims.Where(c => c.Type == ClaimTypes.Role).Select(c => c.Value).SingleOrDefault() == "admin")
						{ 
							<li>
								<a class="has-arrow" asp-controller="Home" asp-action="Company" aria-expanded="false"><i class="icon dripicons-browser"></i><span class="hide-menu">Company</span></a>
                          
						</li>
							<li >
								<a class="has-arrow" asp-controller="Home" asp-action="Job" aria-expanded="false"><i class="icon dripicons-stack"></i><span class="hide-menu">Job</span></a>
                            
						</li>
							<li>
								<a class="has-arrow" asp-controller="Home" asp-action="Useropload" aria-expanded="false"><i class="icon dripicons-view-thumb"></i><span class="hide-menu">Upload Excel</span></a>
								
						</li>
							<li>
								<a class="has-arrow" asp-controller="Home" asp-action="Userlist" aria-expanded="false"><i class="icon dripicons-jewel"></i><span class="hide-menu">Export/Block</span></a>
                            
						</li>
                        
						}
							<li>
								<a class="has-arrow"  asp-controller="Chat" asp-action="Notification" aria-expanded="false"><i class="icon dripicons-to-do"></i><span class="hide-menu">Notice</span></a>
                           
						</li>

							}
							else
							{
									<li>
								<a class="has-arrow"  asp-controller="Account" asp-action="Login" aria-expanded="false"><i class="icon dripicons-lock"></i><span class="hide-menu">Log In</span></a>
                           
						</li>
							}
						</ul>
					</nav>
					
				</div>
				</div>
		</div>	
     	 
	@RenderBody()

</div>
		
	
		<!-- END FULL PAGE SEARCH -->
		<!-- ================== GLOBAL VENDOR SCRIPTS ==================-->
		<script src="/../assets/vendor/modernizr/modernizr.custom.js"></script>
		<script src="/../assets/vendor/jquery/dist/jquery.min.js"></script>
		<script src="/../assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
		<script src="/../assets/vendor/js-storage/js.storage.js"></script>
		<script src="/../assets/vendor/js-cookie/src/js.cookie.js"></script>
		<script src="/../assets/vendor/pace/pace.js"></script>
		<script src="/../assets/vendor/metismenu/dist/metisMenu.js"></script>
		<script src="/../assets/vendor/switchery-npm/index.js"></script>
		<script src="/../assets/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js"></script>
		<!-- ================== GLOBAL APP SCRIPTS ==================-->
		<script src="/../assets/js/global/app.js"></script>
</body>

</html>

@model IEnumerable<ChattingApp.Models.Companyinfo>

@{
    ViewData["Title"] = "Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content container-fluid">
	<section class="page-content p-t-30" id="message-wrapper">
		<div class="card">
            <div class="card-header">
                 <h4>Add Company</h4>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Company">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label for="company" class="control-label"></label>
                                <input name="company" class="form-control" required/>
                                <span validation-for="company" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                    <div class="col-md-8">
                       <table class="table table-bordered">
                    <thead>
                        <tr>
                             <th>
              
                            </th>
                            <th>
                             Name
                            </th>
                            <th>
            
                            </th>
           
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                #
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.company)
                            </td>
          
                            <td>
                            <a class="btn btn-danger" asp-action="DeleteCompany" asp-route-id="@item.companyid">Delete</a>
                            </td>
            
                        </tr>
                    }
                    </tbody>
                </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>



